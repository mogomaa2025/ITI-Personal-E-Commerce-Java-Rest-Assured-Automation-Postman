<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ITI End To End API Test Suites">
    <!-- Listeners-->
    <listeners>
        <listener class-name="com.gecom.utils.TestListener"/>
    </listeners>

    <test name="Regression Tests">
        <groups>
            <run>
                <include name="SystemTest"/>
                <include name="AuthenticationTest"/>
                <include name="UsersTest"/>
                <include name="CategoriesTest"/>
                <include name="ProductsTest"/>
                <include name="CartTest"/>
                <include name="ReviewsTest"/>
                <include name="OrdersTest"/>
                <include name="StatsAnalyticsTest"/>
                <include name="HelpcenterTest"/>
                <include name="ContactTest"/>
                <include name="WishlistTest"/>
                <include name="CouponsTest"/>
                <include name="NotificationsTest"/>
                <include name="SearchTest"/>
                <include name="BlogTest"/>


            </run>
        </groups>
        <classes>
            <class name="com.gecom.SystemTest"/>
            <class name="com.gecom.AuthenticationTest"/>
            <class name="com.gecom.UsersTest"/>
            <class name="com.gecom.CategoriesTest"/>
            <class name="com.gecom.ProductsTest"/>
            <class name="com.gecom.CartTest"/>
            <class name="com.gecom.ReviewsTest"/>
            <class name="com.gecom.OrdersTest"/>
            <class name="com.gecom.StatsAnalyticsTest"/>
            <class name="com.gecom.HelpcenterTest"/>
            <class name="com.gecom.ContactTest"/>
            <class name="com.gecom.WishlistTest"/>
            <class name="com.gecom.CouponsTest"/>
            <class name="com.gecom.NotificationsTest"/>
            <class name="com.gecom.SearchTest"/>
            <class name="com.gecom.BlogTest"/>

        </classes>
    </test>
</suite>
